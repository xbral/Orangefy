{
	"extends": ["airbnb", "prettier", "prettier/react"],
	"rules": {
		"react-hooks/rules-of-hooks": "error",
		"react-hooks/exhaustive-deps": "warn",
		"global-require": 0,
		"import/prefer-default-export": 0,
		"comma-dangle": 0,
		"no-trailing-spaces": 0,
		"jsx-a11y/href-no-hash": [0],
		"no-extend-native": [
			"error",
			{
				"exceptions": ["Date"]
			}
		],
		"react/jsx-filename-extension": [
			1,
			{
				"extensions": [".js", ".jsx"]
			}
		],
		"prettier/prettier": [
			"error",
			{
				"trailingComma": "all",
				"singleQuote": true,
				"printWidth": 130
			}
		],
		"no-unused-expressions": [
			"error",
			{
				"allowTaggedTemplates": true,
				"allowTernary": true
			}
		],
		"no-unused-vars": [
			0,
			{
				"argsIgonrePattern": "res|next|^err"
			}
		],
		"import/no-named-as-default": 0,
		"react/prop-types": [1],
		"arrow-body-style": [2, "as-needed"],
		"react/jsx-no-undef": [
			2,
			{
				"allowGlobals": true
			}
		],
		"react/jsx-wrap-multilines": 0,
		"radix": 0,
		"no-else-return": 0,
		"new-cap": 0
	},
	"plugins": ["prettier", "jsx-a11y", "import", "react-hooks"],
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true,
			"modules": true,
			"experimentalObjectRestSpread": true
		}
	}
}
